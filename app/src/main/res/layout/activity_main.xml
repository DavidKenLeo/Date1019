<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dkl.auser.date1019.MainActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="時間:"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/editShow" />

    <TextView
        android:id="@+id/texttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017-10-20"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toBottomOf="@+id/editShow" />

    <ImageView
        android:id="@+id/imag1"
        android:layout_width="wrap_content"
        android:layout_height="118dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/view"
        app:layout_constraintHorizontal_bias="0.41"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/showData"
        android:layout_width="62dp"
        android:layout_height="35dp"
        android:text="鬼湖"
        android:textSize="24sp"
        android:orientation="vertical"
        android:layout_marginRight="95dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@+id/texttime" />

    <TextView
        android:id="@+id/showLocation"
        android:layout_width="80dp"
        android:layout_height="39dp"
        android:text="拍攝地點:"
        android:layout_marginEnd="113dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/showData"
        android:layout_marginRight="8dp"
        android:layout_marginTop="108dp"
        app:layout_constraintTop_toBottomOf="@+id/texttime"
        app:layout_constraintHorizontal_bias="0.06" />

    <EditText
        android:id="@+id/editShow"
        android:layout_width="324dp"
        android:layout_height="67dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="@string/app_article"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/imag1"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bprv"
        android:layout_width="87dp"
        android:layout_height="54dp"
        android:text="預覽"

        android:layout_marginTop="428dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bnext"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:text="下一張"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="33dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="29dp" />

    <TextView
        android:id="@+id/showLocation2"
        android:layout_width="81dp"
        android:layout_height="24dp"
        android:text="地點2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/showLocation" />


</android.support.constraint.ConstraintLayout>
